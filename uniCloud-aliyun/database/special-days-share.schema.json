{
	"bsonType": "object",
	"required": ["name", "time", "type", "poster"],
	"permission": {
		"read": "auth.uid != null",
		"create": "auth.uid != null",
		"update": "auth.uid != null",
		"delete": "auth.uid != null"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"name": {
			"bsonType": "string",
			"trim": "both",
			"title": "名称",
			"errorMessage": {
				"required": "名称不能为空"
			}
		},
		"time": {
			"bsonType": "timestamp",
			"title": "日期",
			"errorMessage": {
				"required": "日期不能为空"
			}
		},
		"category": {
			"bsonType": "string",
			"title": "时光广场中分类"
		},
		"type": {
			"bsonType": "int",
			"title": "类型",
			"defaultValue": 0,
			"enum": [{
					"text": "纪念日",
					"value": 0
				},
				{
					"text": "生日",
					"value": 1
				},
				{
					"text": "提醒日",
					"value": 2
				}
			],
			"errorMessage": {
				"required": "类型不能为空"
			}
		},
		"lunar": {
			"bsonType": "int",
			"title": "类型",
			"defaultValue": 0,
			"enum": [{
					"text": "公历",
					"value": 0
				},
				{
					"text": "农历",
					"value": 1
				}
			]
		},
		"leap": {
			"bsonType": "bool",
			"title": "闰月",
			"defaultValue": false
		},
		"user_id": {
			"bsonType": "string",
			"title": "分享用户id",
			"foreignKey": "uni-id-users._id",
			"forceDefaultValue": {
				"$env": "uid"
			}
		},
		"user_day_id": {
			"bsonType": "string",
			"title": "分享来源日期id"
		},
		"favorite": {
			"bsonType": "int",
			"title": "收藏量",
			"defaultValue": 0
		},
		"remark": {
			"bsonType": "string",
			"trim": "both",
			"title": "备注"
		},
		"avatar": {
			"bsonType": "file",
			"title": "头像"
		},
		"poster": {
			"bsonType": "array",
			"arrayType": "file",
			"title": "相册",
			"multiple": true, // 允许选择多张图片，schema2code生效
			"fileMediaType": "image", // 可选值 all|image|video 默认值为all,表示所有文件，image表示图片类型文件，video表示视频类型文件
			"fileExtName": "jpg,png" // 扩展名过滤，多个用 , 分割
		},
		"create_date": {
			"bsonType": "timestamp",
			"description": "创建时间",
			"forceDefaultValue": {
				"$env": "now"
			}
		},
		"update_date": {
			"bsonType": "timestamp",
			"description": "更新时间"
		}
	}
}
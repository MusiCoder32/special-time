// 文档教程: https://uniapp.dcloud.net.cn/uniCloud/schema
{
	"bsonType": "object",
	"required": [],
	"permission": {
		"read": true, // 任何用户都可以读
		"create": "auth.uid != null",
		"update": "auth.uid != null",
		"delete": "doc.user_id == auth.uid"
	},
	"properties": {
		"_id": {
			"description": "ID，系统自动生成"
		},
		"lemmaId": {
			"bsonType": "number"
		},
		"coverPic": {
			"bsonType": "string",
			"description": "百度头像照片地址"
		},
		"uniCoverPic": {
			"bsonType": "file",
			"description": "uniCloud头像照片地址"
		},
		"lemmaTitle": {
			"bsonType": "string"
		},
		"birthPlace": {
			"bsonType": "string"
		},
		"birthTime": {
			"bsonType": "timestamp"
		},
		"used": {
			"bsonType": "bool"
		},
		"friends": {
			"bsonType": "array",
			"arrayType": "object"
		}
	}
}